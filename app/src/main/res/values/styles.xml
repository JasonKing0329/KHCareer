<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActionbarIcon">
        <item name="android:background">@drawable/actionbar_icon_bk</item>
        <item name="android:clickable">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:paddingTop">@dimen/actionbar_padding</item>
        <item name="android:paddingBottom">@dimen/actionbar_padding</item>
    </style>

    <style name="ActionbarIcon_L">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:paddingTop">@dimen/actionbar_padding</item>
        <item name="android:paddingBottom">@dimen/actionbar_padding</item>
    </style>

    <style name="ActionbarCloseIcon">
        <item name="android:clickable">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:paddingTop">@dimen/actionbar_padding</item>
        <item name="android:paddingBottom">@dimen/actionbar_padding</item>
    </style>

    <style name="DrawsBlue_Toolbar">
        <item name="android:background">@drawable/selector_basic_frame</item>
        <item name="android:textColor">@color/draws_blue_text</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
    <style name="DrawsCustomDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/dialog_background</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>

    <style name="h2h_player_main_table_tv">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/h2h_player_main_table_bk</item>
    </style>

    <style name="h2h_player_main_table_row">
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>

    <style name="View7FolderContainer">
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">@dimen/folder_item_padding</item>
        <item name="android:background">@drawable/shape_folder_bk</item>
    </style>

    <style name="View7FolderDetailButton">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="View7MoreDetailBtn">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SwipeItemIcon">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">5dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="V7ActionbarActionIcon">
        <item name="android:layout_width">@dimen/view7_actionbar_action_icon_size</item>
        <item name="android:layout_height">@dimen/view7_actionbar_action_icon_size</item>
        <item name="android:padding">@dimen/view7_actionbar_action_icon_padding</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="MatchManageItem">
        <item name="android:textColor">#3c3c3c</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="MatchManageItemSub">
        <item name="android:textColor">#7f7f7f</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="ScoreGroupTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ScoreGroupTitleUnderline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="ScoreGroupText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">#3c3c3c</item>
    </style>

    <style name="RecordEditorFixText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:background">@drawable/tw_spinner_disabled_holo_light</item>
    </style>

    <style name="InputScoreSetText">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="InputScoreEdit">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:inputType">number</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="InputScoreIconRemove">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:src">@drawable/icon_decrease</item>
    </style>

    <style name="InputScoreIconTie">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:background">@drawable/shape_input_score_tie_bg</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textSize">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:text">7</item>
    </style>

    <style name="InputScoreTieEdit">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">number</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="RecordEditorBtn">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/indicator_bk</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CommonPlayerGroup">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="CommonPlayerName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">26dp</item>
    </style>

    <style name="CommonPlayerH2h">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/tab_actionbar_text_focus</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textSize">20dp</item>
    </style>

</resources>
