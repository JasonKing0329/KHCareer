<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActionbarIcon">
        <item name="android:background">@drawable/actionbar_icon_bk</item>
        <item name="android:clickable">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:paddingTop">@dimen/actionbar_padding</item>
        <item name="android:paddingBottom">@dimen/actionbar_padding</item>
    </style>

    <style name="ActionbarIcon_L">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:paddingTop">@dimen/actionbar_padding</item>
        <item name="android:paddingBottom">@dimen/actionbar_padding</item>
    </style>

    <style name="ActionbarCloseIcon">
        <item name="android:clickable">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:paddingTop">@dimen/actionbar_padding</item>
        <item name="android:paddingBottom">@dimen/actionbar_padding</item>
    </style>

    <style name="DrawsBlue_Toolbar">
        <item name="android:background">@drawable/selector_basic_frame</item>
        <item name="android:textColor">@color/draws_blue_text</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
    <style name="DrawsCustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/dialog_background</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>

    <style name="h2h_player_main_table_tv">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/h2h_player_main_table_bk</item>
    </style>

    <style name="h2h_player_main_table_row">
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>

    <style name="View7FolderContainer">
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">@dimen/folder_item_padding</item>
        <item name="android:background">@drawable/shape_folder_bk</item>
    </style>

    <style name="View7FolderDetailButton">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="View7MoreDetailBtn">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SwipeItemIcon">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">5dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
</resources>
