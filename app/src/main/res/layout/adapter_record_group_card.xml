<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/group_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:background="?android:attr/selectableItemBackground"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:paddingRight="15dp"
            android:gravity="center_vertical">
            <com.github.siyamed.shapeimageview.BubbleImageView
                android:id="@+id/iv_match"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:gravity="center"
                app:siTriangleHeight="8dp"
                app:siArrowPosition="right"
                android:src="@drawable/default_img"
                android:scaleType="fitXY"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp">
                <TextView
                    android:id="@+id/tv_match_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="蒙特卡洛大师赛"
                    android:textSize="14dp"
                    android:textColor="@color/record_item_text_normal" />
                <TextView
                    android:id="@+id/tv_match_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="ATP 1000"
                    android:textSize="12dp"
                    android:textColor="@color/record_item_text_gray" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_horizontal">
                    <TextView
                        android:id="@+id/tv_match_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2017-04"
                        android:textSize="12dp"
                        android:textColor="@color/record_item_text_gray" />
                    <TextView
                        android:id="@+id/tv_match_round"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="Semi Final"
                        android:textSize="12dp"
                        android:textColor="@color/record_item_text_gray" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/iv_winner_cup"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:visibility="gone"
                    android:src="@drawable/ic_cup"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>