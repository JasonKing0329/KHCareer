<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
	android:id="@+id/group_record"
	android:gravity="center_vertical">
	<RelativeLayout
		android:layout_width="120dp"
		android:layout_height="70dp">
		<ImageView
			android:id="@+id/iv_match"
			android:layout_width="120dp"
			android:layout_height="70dp"
			android:src="@drawable/nav_header_mon"
			android:scaleType="fitXY"
			android:layout_gravity="center_vertical" />
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center"
			android:background="#66000000"
			android:orientation="vertical">
			<TextView
				android:id="@+id/tv_date"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="2017-12"
				android:textSize="14dp"
				android:textColor="#99ffffff"/>
			<RelativeLayout
				android:layout_width="80dp"
				android:layout_height="wrap_content">
				<TextView
					android:id="@+id/tv_level"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:text="Master Cup"
					android:textColor="#99ffffff"
					android:textSize="10dp"/>
				<TextView
					android:id="@+id/tv_court"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:text="红土"
					android:textColor="#99ffffff"
					android:textSize="10dp"/>
			</RelativeLayout>
		</LinearLayout>
	</RelativeLayout>

	<TextView
		android:id="@+id/tv_win"
		android:layout_width="60dp"
		android:layout_height="70dp"
		android:background="#12171d"
		android:gravity="center"
		android:text="W"
		android:textSize="30dp"
		android:textStyle="bold"
		android:textColor="@color/h2hlist_color_win"/>

	<LinearLayout
	    android:layout_width="0dp"
		android:layout_weight="1"
	    android:layout_height="70dp"
	    android:paddingLeft="10dp"
	    android:gravity="center_vertical"
		android:background="@drawable/shape_h2hitem_bg"
	    android:orientation="vertical" >
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal" >
			<TextView
	        	android:id="@+id/tv_match_name"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
				android:text="蒙特卡洛大师赛"
	    		android:textSize="14dp"
				android:textColor="#eEeFe4"/>
			<TextView
				android:id="@+id/tv_round"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				android:text="Semi Final"
				android:textSize="14dp"
				android:textColor="#8E8F94"/>
		</LinearLayout>
		<TextView
        	android:id="@+id/tv_score"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
			android:layout_marginTop="3dp"
			android:text="7-6(4)/3-6/6-7(5)/6-1/6-4"
	    	android:textSize="14dp"
	    	android:textColor="#c6c6c6"/>
	</LinearLayout>

</LinearLayout>
