			    android:layout_height="match_parent"
			    android:layout_marginRight="10dp"
			    android:layout_centerVertical="true"
			    android:textSize="30sp"
			    android:textStyle="bold"
			    android:layout_toLeftOf="@id/h2h_image_player2"/>
	    </RelativeLayout>
