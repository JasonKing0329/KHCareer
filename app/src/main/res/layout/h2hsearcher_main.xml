			    android:layout_height="match_parent"
			    android:layout_marginLeft="10dp"
			    android:layout_centerVertical="true"
			    android:textSize="30sp"
			    android:textStyle="bold"
			    android:layout_toRightOf="@id/h2h_image_player1"/>
