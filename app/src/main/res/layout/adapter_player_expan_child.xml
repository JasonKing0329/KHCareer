<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical" >
    <com.github.siyamed.shapeimageview.BubbleImageView 
        android:id="@+id/player_item_head"
	    android:layout_width="@dimen/player_item_head_width"
	    android:layout_height="@dimen/player_item_head_height"
        app:siTriangleHeight="8dp"
        app:siArrowPosition="right"
        android:layout_marginLeft="20dp"/>
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="10dp"
	    android:orientation="vertical" >
		<TextView
        	android:id="@+id/player_item_player"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="@color/actionbar_bk_blue"/>
		<TextView
        	android:id="@+id/player_item_match"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="@color/white"/>
		<TextView
        	android:id="@+id/player_item_score"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="@color/actionbar_bk_orange"/>
	</LinearLayout>

</LinearLayout>
