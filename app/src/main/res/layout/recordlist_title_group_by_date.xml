<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@color/lightseagreen"
    android:orientation="horizontal" >
    <ImageView 
        android:id="@+id/recordlist_title_image"
	    android:layout_width="30dp"
	    android:layout_height="30dp"
	    android:layout_marginLeft="5dp"
	    android:scaleType="fitCenter"
	    android:src="@drawable/group_expand_down"/>
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
		android:layout_marginLeft="3dp"
	    android:orientation="horizontal" >
	   <TextView 
	        android:id="@+id/recordlist_level"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:textColor="@color/recordlist_title_text"
		    android:layout_weight="0.3"/>
	   <TextView 
	        android:id="@+id/recordlist_match"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:textColor="@color/recordlist_title_text"
		    android:textStyle="bold"
		    android:layout_weight="0.45"/>
	   <TextView 
	        android:id="@+id/recordlist_date"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:textColor="@color/recordlist_title_text"
			android:gravity="right"
			android:layout_marginRight="10dp"
		    android:layout_weight="0.25"/>
	</LinearLayout>

</LinearLayout>
