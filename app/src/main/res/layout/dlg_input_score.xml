<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">
            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/input_title_player1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/input_title_player2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/input_group_set1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">
            <TextView
                android:text="Set1"
                style="@style/InputScoreSetText" />
            <EditText
                android:id="@+id/input_set1_score1"
                style="@style/InputScoreEdit" />
            <EditText
                android:id="@+id/input_set1_score2"
                style="@style/InputScoreEdit" />
            <TextView
                android:id="@+id/input_set1_tie"
                style="@style/InputScoreIconTie" />
            <EditText
                android:id="@+id/input_set1_tie_edit"
                style="@style/InputScoreTieEdit"/>
            <ImageView
                android:id="@+id/input_set1_delete"
                style="@style/InputScoreIconRemove" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/input_group_set2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">
            <TextView
                android:text="set2"
                style="@style/InputScoreSetText" />
            <EditText
                android:id="@+id/input_set2_score1"
                style="@style/InputScoreEdit" />
            <EditText
                android:id="@+id/input_set2_score2"
                style="@style/InputScoreEdit" />
            <TextView
                android:id="@+id/input_set2_tie"
                style="@style/InputScoreIconTie" />
            <EditText
                android:id="@+id/input_set2_tie_edit"
                style="@style/InputScoreTieEdit"/>
            <ImageView
                android:id="@+id/input_set2_delete"
                style="@style/InputScoreIconRemove" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/input_group_set3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">
            <TextView
                android:text="set3"
                style="@style/InputScoreSetText" />
            <EditText
                android:id="@+id/input_set3_score1"
                style="@style/InputScoreEdit" />
            <EditText
                android:id="@+id/input_set3_score2"
                style="@style/InputScoreEdit" />
            <TextView
                android:id="@+id/input_set3_tie"
                style="@style/InputScoreIconTie" />
            <EditText
                android:id="@+id/input_set3_tie_edit"
                style="@style/InputScoreTieEdit"/>
            <ImageView
                android:id="@+id/input_set3_delete"
                style="@style/InputScoreIconRemove" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/input_group_set4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">
            <TextView
                android:text="set4"
                style="@style/InputScoreSetText" />
            <EditText
                android:id="@+id/input_set4_score1"
                style="@style/InputScoreEdit" />
            <EditText
                android:id="@+id/input_set4_score2"
                style="@style/InputScoreEdit" />
            <TextView
                android:id="@+id/input_set4_tie"
                style="@style/InputScoreIconTie" />
            <EditText
                android:id="@+id/input_set4_tie_edit"
                style="@style/InputScoreTieEdit"/>
            <ImageView
                android:id="@+id/input_set4_delete"
                style="@style/InputScoreIconRemove" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/input_group_set5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">
            <TextView
                android:text="set5"
                style="@style/InputScoreSetText" />
            <EditText
                android:id="@+id/input_set5_score1"
                style="@style/InputScoreEdit" />
            <EditText
                android:id="@+id/input_set5_score2"
                style="@style/InputScoreEdit" />
            <TextView
                android:id="@+id/input_set5_tie"
                style="@style/InputScoreIconTie" />
            <EditText
                android:id="@+id/input_set5_tie_edit"
                style="@style/InputScoreTieEdit"/>
            <ImageView
                android:id="@+id/input_set5_delete"
                style="@style/InputScoreIconRemove" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content" />
            <CheckBox
                android:id="@+id/input_retire1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Retire"/>
            <CheckBox
                android:id="@+id/input_retire2"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Retire"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content" />
            <CheckBox
                android:id="@+id/input_wo1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="W/O"/>
            <CheckBox
                android:id="@+id/input_wo2"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="W/O"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/input_add_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="?android:attr/selectableItemBackground">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_add"
                android:scaleType="fitXY" />
            <TextView
                style="@style/InputScoreSetText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Add set"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>