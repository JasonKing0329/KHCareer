<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/group_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        app:elevation="0dp"
        android:theme="@style/RecordTheme.AppBarOverlay">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/ctl_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="@color/colorPrimary"
            app:scrimVisibleHeightTrigger="@dimen/home_scrim_visible_height"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/player_basic_head_height">

                <ImageView
                    android:id="@+id/iv_head"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/player_basic_head_height"
                    android:src="@drawable/nav_header_mon"
                    android:scaleType="fitXY"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#99000000"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="55dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Competitors"
                            android:textColor="@color/tab_actionbar_text_focus"
                            android:textSize="16dp"/>
                        <TextView
                            android:id="@+id/tv_total_player"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#eeeeee"
                            android:textSize="16dp"
                            android:layout_marginLeft="15dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="55dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_career"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="Career"
                            android:textColor="@drawable/selector_action_tab_text"
                            android:textSize="14dp"/>
                        <TextView
                            android:id="@+id/tv_win"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="Win"
                            android:textColor="@drawable/selector_action_tab_text"
                            android:textSize="14dp"
                            android:layout_marginLeft="15dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="55dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_season"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="Season"
                            android:textColor="@drawable/selector_action_tab_text"
                            android:textSize="14dp"/>
                        <TextView
                            android:id="@+id/tv_lose"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="Lose"
                            android:textColor="@drawable/selector_action_tab_text"
                            android:textSize="14dp"
                            android:layout_marginLeft="15dp"/>
                    </LinearLayout>
                </LinearLayout>
                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/piechart"
                    android:layout_width="200dp"
                    android:layout_height="180dp"
                    android:layout_marginRight="0dp"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:navigationIcon="@drawable/ic_arrow_back_white_24dp"
                app:popupTheme="@style/RecordTheme.PopupOverlay" />
        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_h2h_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    <TextView
        android:id="@+id/tv_conclude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_h2hlist_include"
        android:textColor="@color/colorPrimary"
        android:elevation="10dp"
        android:padding="10dp"
        android:layout_gravity="bottom"/>

    <com.nightonke.boommenu.BoomMenuButton
        android:id="@+id/bmb_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:elevation="12dp"
        app:bmb_normalColor="#565658"
        app:bmb_buttonRadius="@dimen/boom_menu_btn_radius"
        app:bmb_piecePlaceEnum="piecePlace_dot_3_1"
        app:bmb_buttonPlaceEnum="buttonPlace_vertical"
        app:bmb_buttonEnum="simpleCircle"/>

    <com.king.khcareer.pubview.SideBar
        android:id="@+id/sidebar"
        android:layout_width="16dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_marginTop="-28dp"
        android:layout_marginBottom="70dp"
        android:visibility="gone"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:sideBackground="@color/transparent"
        app:indexTextSize="12dp"
        app:indexColor="@color/dark_grey"
        app:indexColorFocus="@color/tab_actionbar_text_focus"/>

    <TextView
        android:id="@+id/tv_index"
        android:layout_width="@dimen/swipecard_indexbar_popup_size"
        android:layout_height="@dimen/swipecard_indexbar_popup_size"
        android:background="@drawable/shape_swipecard_sidebar_popup_bk"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/swipecard_indexbar_popup_text_size"
        android:visibility="gone" />

</android.support.design.widget.CoordinatorLayout>