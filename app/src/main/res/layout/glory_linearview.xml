<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/glory_layout_linearview"
    android:background="@drawable/img_bg" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/img_heng"
            android:contentDescription="@string/str_vertical" />

        <ScrollView 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
			<TableLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_marginTop="20dp">
			    <TableRow 
		            android:layout_width="match_parent"
		            android:layout_height="30dp"
		            android:gravity="center_vertical">
			        <TextView
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
						android:layout_weight="1"
						android:layout_marginLeft="10dp"
						android:textColor="#000000"
						android:text="Current rank:"/>
			        <EditText 
			            android:id="@+id/glory_rank_current"
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:enabled="false"
			            android:textColor="#000000"
			            android:padding="5dp"
			            android:paddingLeft="20dp"
			            android:background="@color/transparent"
						android:layout_weight="3"/>
			        <!-- TextView
			            android:id="@+id/glory_rank_current"
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:gravity="left"
						android:textColor="#000000"
						android:layout_weight="3"/-->
			    </TableRow>
			    <TableRow 
		            android:layout_width="match_parent"
		            android:layout_height="30dp"
		            android:layout_marginTop="10dp"
		            android:gravity="center_vertical">
			        <TextView
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
						android:layout_weight="1"
						android:layout_marginLeft="10dp"
						android:textColor="#000000"
						android:text="Current score:"/>
			        <TextView 
			            android:id="@+id/glory_rank_current_score"
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:textColor="#000000"
			            android:padding="5dp"
			            android:paddingLeft="20dp"
			            android:background="@color/transparent"
						android:layout_weight="3"/>
			        <!--TextView
			            android:id="@+id/glory_rank_current_score"
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:gravity="left"
						android:textColor="#000000"
						android:layout_weight="3"/-->
			    </TableRow>
			    <TableRow 
		            android:layout_width="match_parent"
		            android:layout_height="30dp"
		            android:gravity="center_vertical">
			        <TextView
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
						android:layout_weight="1"
						android:layout_marginLeft="10dp"
						android:textColor="#000000"
						android:text="YTD match number:"/>
			        <EditText 
			            android:id="@+id/glory_ytd_matchnumber"
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:enabled="false"
			            android:textColor="#000000"
			            android:padding="5dp"
			            android:paddingLeft="20dp"
			            android:background="@color/transparent"
						android:layout_weight="3"/>
			    </TableRow>
			    <TableRow 
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginTop="10dp"
		            android:gravity="center_vertical">
			        <TextView
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
						android:layout_weight="1"
						android:layout_marginLeft="10dp"
						android:textColor="#000000"
						android:text="No.1 week:"/>
			        <LinearLayout 
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
						android:layout_weight="3"
						android:gravity="center_vertical">
						<ImageView 
				            android:id="@+id/glory_rank_top1week_decrease"
				            android:layout_width="30dp"
				            android:layout_height="30dp"
				            android:scaleType="fitCenter"
				            android:src="@drawable/icon_decrease"
				            android:visibility="gone"/>
				        <EditText 
				            android:id="@+id/glory_rank_top1week"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:enabled="false"
				            android:textColor="#000000"
				            android:padding="5dp"
				            android:gravity="center"
				            android:background="@color/transparent"/>
						<ImageView 
				            android:id="@+id/glory_rank_top1week_increase"
				            android:layout_width="30dp"
				            android:layout_height="30dp"
				            android:scaleType="fitCenter"
				            android:src="@drawable/icon_increase"
				            android:visibility="gone"/>
			        </LinearLayout>
			    </TableRow>

			</TableLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/white"
            android:padding="1dp" >

            <ImageView
            	android:id="@+id/achieve_list_title_icon_linear"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/img_person_icon"
                android:contentDescription="@string/person_icon" />
        </LinearLayout>

        <TextView
            android:id="@+id/achieve_list_title_linear"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:textSize="25sp" />
    </LinearLayout>

</FrameLayout>