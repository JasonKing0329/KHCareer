<?xml version="1.0" encoding="utf-8"?>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:id="@+id/detail_h2h_bk"
	android:background="@color/detail_viewpage_match">
    <TextView 
        android:id="@+id/detail_h2h_player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:padding="5dp"
        android:textStyle="bold"
        android:shadowColor="#ffff00"
        android:shadowRadius="3"
        android:text="伊斯内尔"/>
    <ImageView
        android:id="@+id/detail_h2h_player_image"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_gravity="center"
        android:scaleType="fitXY" />
	<FrameLayout 
	    android:id="@+id/detail_h2h_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
		<Button 
	        android:id="@+id/detail_button_right"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:gravity="right"
	        android:text="&gt;&gt;"
	    	android:background="@drawable/detail_h2h_button_bk"
		    />
		<LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_margin="3dp"
	        android:orientation="vertical">
			<LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal">
			    <TextView 
		        	android:id="@+id/detail_h2h_player1"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:layout_weight="1.5"
			        android:gravity="right"
			        android:textSize="18sp"
        			android:textColor="#ffffff"
			        android:text="king"/>
			    <TextView 
		        	android:id="@+id/detail_h2h_h2h"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:layout_weight="1"
			        android:textSize="18sp"
			        android:gravity="center"
        			android:textColor="#ffffff"
			        android:text="13-12"/>
			    <TextView 
		        	android:id="@+id/detail_h2h_player2"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:layout_weight="1.5"
        			android:textColor="#ffffff"
			        android:textSize="18sp"
			        android:text="科赫尔斯琪雷柏"/>
			</LinearLayout>
			<LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="2dp"
		        android:orientation="horizontal">
			    <TextView 
		        	android:id="@+id/detail_h2h_player1rs"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:layout_weight="3"
			        android:gravity="right"
			        android:textSize="13sp"
        			android:textColor="#ffffff"
			        android:text="rank(1)  seed(1)"/>
			    <TextView 
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:layout_weight="1"/>
			    <TextView 
		        	android:id="@+id/detail_h2h_player2rs"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:layout_weight="3"
        			android:textColor="#ffffff"
			        android:textSize="13sp"
			        android:text="rank(12)  seed(2)"/>
			</LinearLayout>
		</LinearLayout>
	</FrameLayout>
	<ListView 
	    android:id="@+id/detail_h2h_detail"
	    android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"/>
