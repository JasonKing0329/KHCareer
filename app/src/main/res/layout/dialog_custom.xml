<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp"
	    android:gravity="center_vertical">
	    <LinearLayout 
	        style="@style/DrawsBlue_Toolbar"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
	       	android:layout_marginLeft="5dp"
       		android:orientation="horizontal"
		    android:gravity="center_vertical">
		    <ImageView 
		        android:layout_width="@dimen/custom_dialog_toolbar_icon"
	       		android:layout_height="@dimen/custom_dialog_toolbar_icon"
	       		android:src="@drawable/dialog_title_icon"
		        />
		    <TextView 
		        android:id="@+id/dialog_custom_title"
		        android:layout_centerVertical="true"
		        android:layout_width="wrap_content"
	       		android:layout_height="wrap_content"
	       		android:layout_marginLeft="5dp"
	       		android:textSize="18dp"
	       		android:textStyle="bold"/>
	    </LinearLayout>
	    <LinearLayout 
	        style="@style/DrawsBlue_Toolbar"
		    android:id="@+id/dialog_custom_cancle_layout"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
		    android:gravity="center_vertical"
       		android:layout_marginRight="5dp">
		    <ImageView 
		        android:layout_width="@dimen/custom_dialog_toolbar_icon"
	       		android:layout_height="@dimen/custom_dialog_toolbar_icon"
	       		android:src="@drawable/icon_cancel"
		        />
		    <TextView 
		    	android:id="@+id/dialog_custom_cancle"
		        android:layout_width="wrap_content"
	       		android:layout_height="wrap_content"
	       		android:layout_marginLeft="5dp"
	       		android:textSize="18dp"
	       		android:textStyle="bold"
       			android:text="@string/cancel"/>
	    </LinearLayout>
	    <LinearLayout 
	        style="@style/DrawsBlue_Toolbar"
		    android:id="@+id/dialog_custom_save_layout"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
	        android:layout_toLeftOf="@id/dialog_custom_cancle_layout"
	        android:layout_centerVertical="true"
		    android:gravity="center_vertical"
       		android:layout_marginRight="5dp">
		    <ImageView 
		        android:layout_width="@dimen/custom_dialog_toolbar_icon"
	       		android:layout_height="@dimen/custom_dialog_toolbar_icon"
	       		android:src="@drawable/icon_save"
		        />
		    <TextView 
		    	android:id="@+id/dialog_custom_save"
		        android:layout_width="wrap_content"
	       		android:layout_height="wrap_content"
	       		android:layout_marginLeft="5dp"
	       		android:textSize="18dp"
	       		android:textStyle="bold"
       			android:text="@string/save"/>
	    </LinearLayout>
	    <LinearLayout 
	        android:id="@+id/dialog_custom_toolbar"
	        android:layout_toLeftOf="@id/dialog_custom_save_layout"
	        android:layout_width="wrap_content"
	      	android:layout_height="wrap_content"
	      	android:orientation="vertical"
       		android:layout_marginRight="10dp"
	        android:layout_centerVertical="true"
	        />
    </RelativeLayout>

    <View 
        android:layout_width="match_parent"
    	android:layout_height="1dp"
    	android:layout_margin="5dp"
		android:background="@color/draws_blue_bk_normal"/>
    
    <LinearLayout 
        android:id="@+id/dialog_custom_view"
        android:layout_width="match_parent"
      	android:layout_height="wrap_content"
      	android:orientation="vertical"
        />
    <TextView
        android:id="@+id/dialog_custom_view_null"
        android:layout_width="match_parent"
      	android:layout_height="100dp"
      	android:gravity="center"
      	android:text="@string/no_content"
      	android:visibility="gone"/>
</LinearLayout>
