<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:id="@+id/ranklist_layout"
    android:orientation="horizontal" >
    <TextView 
        android:id="@+id/ranklist_rank"
	    android:layout_width="0dp"
	    android:layout_weight="0.5"
	    android:layout_height="@dimen/rank_list_item_height"
	    android:textColor="@color/rank_color_text_type2"
		android:gravity="center"/>
    <TextView 
        android:id="@+id/ranklist_change"
	    android:layout_width="0dp"
	    android:layout_weight="0.5"
	    android:layout_height="match_parent"
	    android:textColor="@color/rank_color_text_type2"
		android:gravity="center"/>
    <TextView 
        android:id="@+id/ranklist_player"
	    android:layout_width="0dp"
	    android:layout_weight="1"
	    android:layout_height="match_parent"
	    android:textColor="@color/rank_color_text_type2"
		android:gravity="center"/>
    <TextView 
        android:id="@+id/ranklist_country"
	    android:layout_width="0dp"
	    android:layout_weight="1"
	    android:layout_height="match_parent"
	    android:textColor="@color/rank_color_text_type2"
		android:gravity="center"/>
    <TextView 
        android:id="@+id/ranklist_score"
	    android:layout_width="0dp"
	    android:layout_weight="1"
	    android:layout_height="match_parent"
	    android:textColor="@color/rank_color_text_type2"
		android:gravity="center"/>
    <TextView 
        android:id="@+id/ranklist_matchnumber"
	    android:layout_width="0dp"
	    android:layout_weight="0.5"
	    android:layout_height="match_parent"
	    android:textColor="@color/rank_color_text_type2"
		android:gravity="center"/>

</LinearLayout>
