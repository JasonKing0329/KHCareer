<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:textSize="20dp"
        android:visibility="gone"
        android:textColor="@color/colorPrimary"/>

    <com.github.siyamed.shapeimageview.RoundedImageView
        android:id="@+id/iv_match"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="15dp"
        android:layout_below="@id/tv_title"
        android:src="@drawable/nav_header_mon"
        app:siRadius="15dp"
        android:scaleType="fitXY"/>

    <com.github.siyamed.shapeimageview.RoundedImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="15dp"
        app:siRadius="15dp"
        android:layout_below="@id/tv_title"
        android:src="@drawable/shape_solid_trans_grey"/>

    <RelativeLayout
        android:id="@+id/group_item"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="15dp"
        android:layout_below="@id/tv_title"
        android:paddingRight="20dp">
        <TextView
            android:id="@+id/tv_seq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="51"
            android:textColor="@color/h2hlist_color_win"
            android:textSize="24dp"/>
        <TextView
            android:id="@+id/tv_lose"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:visibility="gone"
            android:text="lose"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:background="@drawable/shape_round_gray"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:text="法国网球公开赛"
            android:textColor="@color/glory_item_text"
            android:textSize="18dp"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:id="@+id/group_competitor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_above="@id/tv_name"
            android:layout_marginBottom="20dp">
            <com.github.siyamed.shapeimageview.CircularImageView
                android:id="@+id/iv_competitor"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_list"
                android:scaleType="fitXY"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/tv_competitor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="#dedede"/>
                <TextView
                    android:id="@+id/tv_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="12dp"
                    android:textColor="#dedede"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:text="Grand Slam"
            android:textColor="@color/glory_item_text"
            android:textSize="14dp"/>
        <TextView
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_level"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:text="摩纳哥/蒙特卡洛"
            android:textColor="@color/glory_item_text"
            android:textSize="14dp"/>
        <TextView
            android:id="@+id/tv_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_city"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:text="2017"
            android:textColor="@color/glory_item_text"
            android:textSize="14dp"/>
    </RelativeLayout>
</RelativeLayout>