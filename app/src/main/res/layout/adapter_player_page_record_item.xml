<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:layout_centerVertical="true"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/group_card">
            <com.github.siyamed.shapeimageview.BubbleImageView
                android:id="@+id/iv_match"
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:gravity="center"
                app:siTriangleHeight="8dp"
                app:siArrowPosition="right"
                android:src="@drawable/default_img"
                android:scaleType="fitXY"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp">
                <TextView
                    android:id="@+id/tv_line1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grand Slam  12月"
                    android:textSize="12dp"
                    android:textColor="@color/actionbar_bk_blue"/>
                <TextView
                    android:id="@+id/tv_line2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="印第安维尔斯大师赛  硬地"
                    android:textSize="12dp"
                    android:textColor="@color/record_item_text_gray"/>
                <TextView
                    android:id="@+id/tv_line3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="科赫尔斯奇雷伯（14/109） def."
                    android:textColor="@color/record_item_text_gray"/>
                <TextView
                    android:id="@+id/tv_line4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7-6(3)/6-7(5)/7-6(10)/5-7/7-6(4)"
                    android:textSize="12dp"
                    android:textColor="@color/record_item_text_gray"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>