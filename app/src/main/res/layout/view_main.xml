<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
	<LinearLayout
	  android:id="@+id/layout_mainview"
	  android:orientation="vertical"
	  android:layout_width="fill_parent"
	  android:layout_height="fill_parent"
	  android:background="@drawable/bk_mainview">
	    <ImageButton 
			android:id="@+id/mview_insert"
			android:layout_width="240px"
			android:layout_height="140px"
			android:layout_marginTop="70px"
			android:src="@drawable/button_insert"
			android:scaleType="fitCenter"
			android:background="@android:color/transparent"
	    />
	    <ImageButton 
			android:id="@+id/mview_search"
			android:layout_width="180px"
			android:layout_height="140px"
			android:layout_marginTop="100px"
			android:layout_marginLeft="20px"
			android:src="@drawable/button_search"
			android:scaleType="fitCenter"
			android:background="@android:color/transparent"
	    />
		<LinearLayout 
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			>
		    <ImageButton 
				android:id="@+id/mview_look"
				android:layout_width="fill_parent"
				android:layout_height="200px"
				android:layout_gravity="bottom"
				android:src="@drawable/button_checkall"
				android:scaleType="fitCenter"
				android:background="@android:color/transparent"
		    />
	    </LinearLayout>
	</LinearLayout>
	<ImageView 
		android:id="@+id/mview_menu"
		android:layout_width="@dimen/actionbar_icon_width"
		android:layout_height="@dimen/actionbar_icon_width"
		android:src="@drawable/actionbar_menu"
		android:padding="5dp"
		android:background="@drawable/mainview_menu_icon_bk"
		android:layout_alignParentTop="true"
		android:layout_alignParentRight="true"/>
</RelativeLayout>