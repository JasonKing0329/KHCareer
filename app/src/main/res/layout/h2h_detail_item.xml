<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:gravity="center_vertical"
    android:paddingLeft="5dp"
    android:paddingTop="2dp"
    android:paddingBottom="2dp">
	<LinearLayout
	    android:id="@+id/h2h_detail_sec1"
	    android:layout_width="60dp"
	    android:layout_height="match_parent"
	    android:gravity="center_vertical"
	    android:background="@color/detail_viewpage_h2h_item_sec1"
	    android:orientation="vertical" >
		<TextView
	       	android:id="@+id/h2h_detail_date"
		    android:layout_width="60dp"
		    android:layout_height="wrap_content"
	    	android:layout_gravity="center"
	    	android:gravity="center_vertical"
	    	android:textColor="@color/detail_viewpage_h2h_item_text1"
	   		android:textSize="14sp"/>
		<TextView
	       	android:id="@+id/h2h_detail_rank"
		    android:layout_width="60dp"
		    android:layout_height="wrap_content"
	    	android:layout_gravity="center"
	    	android:gravity="center_vertical"
	    	android:textColor="@color/detail_viewpage_h2h_item_text1"
	   		android:textSize="14sp"/>
	</LinearLayout>
	<LinearLayout
	    android:id="@+id/h2h_detail_sec2"
	    android:layout_width="60dp"
	    android:layout_height="match_parent"
	    android:layout_marginLeft="5dp"
	    android:gravity="center_vertical"
	    android:background="@color/detail_viewpage_h2h_item_sec2"
	    android:orientation="vertical" >
		<TextView
	       	android:id="@+id/h2h_detail_court"
		    android:layout_width="60dp"
		    android:layout_height="wrap_content"
	    	android:layout_gravity="center"
	    	android:gravity="center_vertical"
	    	android:textColor="@color/detail_viewpage_h2h_item_text2"
	   		android:textSize="14sp"/>
		<TextView
	       	android:id="@+id/h2h_detail_round"
		    android:layout_width="60dp"
		    android:layout_height="wrap_content"
	    	android:layout_gravity="center"
	    	android:gravity="center_vertical"
	    	android:textColor="@color/detail_viewpage_h2h_item_text2"
	   		android:textSize="14sp"/>
	</LinearLayout>
	<LinearLayout
	    android:id="@+id/h2h_detail_sec3"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="5dp"
	    android:background="@color/detail_viewpage_h2h_item_sec3"
	    android:layout_gravity="center_vertical"
	    android:orientation="vertical" >
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal" >
			<TextView
	        	android:id="@+id/h2h_detail_match"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
		    	android:textStyle="bold"
	    		android:textColor="@color/detail_viewpage_h2h_item_text3"
	    		android:textSize="16sp"/>
			<TextView
	        	android:id="@+id/h2h_detail_line1"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
	    		android:textColor="@color/detail_viewpage_h2h_item_text3"
		    	android:textSize="14sp"/>
		</LinearLayout>
		<TextView
        	android:id="@+id/h2h_detail_score"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
	    	android:textColor="@color/detail_viewpage_h2h_item_text3"
	    	android:textSize="14sp"/>
	</LinearLayout>

</LinearLayout>
