<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:id="@+id/bg_selector_container"
    android:padding="@dimen/dialog_bg_selector_item_padding">
    <ImageView
        android:id="@+id/img_selector_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_bg_selector_item_height"
        android:scaleType="fitCenter"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:background="#66000000"
        android:paddingRight="10dp">
        <TextView
            android:id="@+id/img_selector_size"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:gravity="right|center"
            android:textSize="12dp"/>

        <CheckBox
            android:id="@+id/img_selector_check"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:clickable="false"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/img_selector_mark_new"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:scaleType="fitCenter"
        android:src="@drawable/mark_new"
        android:layout_alignParentRight="true"
        android:visibility="gone"/>
</RelativeLayout>