<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:id="@+id/bg_selector_container"
    android:padding="@dimen/dialog_bg_selector_item_padding">
    <ImageView
        android:id="@+id/img_selector_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_bg_selector_item_height" />
    <TextView
        android:id="@+id/img_selector_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/dialog_bg_selector_item_inner_padding"
        android:gravity="right"
        android:background="#66000000"/>

    <CheckBox
        android:id="@+id/img_selector_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:enabled="false"/>
</RelativeLayout>