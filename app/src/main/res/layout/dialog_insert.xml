<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:scrollbars="vertical"
	android:background="@color/white"
	android:layout_width="fill_parent"
	android:layout_height="600px"
	>
	<!-- *****ScrollView的下一级只允许有一个子标签，因此把布局全部装进一个LinearLayout里****** -->
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		>
	    <TextView
			android:text="@string/player_infor"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textColor="@color/white"
			android:background="@color/dark_grey"
		/>
		<LinearLayout 
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="horizontal"
			>
		    <TextView
				android:text="@string/rankp1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20px"
			/>
			<EditText 
				android:id="@+id/insert_et_rank1"
				android:layout_width="100px"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20px"
				android:singleLine="true"
				android:inputType="number"
			/>
		    <TextView
				android:text="@string/seedp1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20px"
			/>
			<EditText 
				android:id="@+id/insert_et_seed1"
				android:layout_width="100px"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20px"
				android:singleLine="true"
				android:inputType="number"
			/>
		</LinearLayout>
		<LinearLayout 
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="horizontal"
			>
		    <TextView
				android:text="@string/comp_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20px"
			/>
	    	<!-- android:completionHint="下拉框注释" -->
	    	<AutoCompleteTextView
				android:id="@+id/insert_et_compname"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20px"
				android:completionThreshold="1"
				
	    	/>
			<!-- android:hint="@string/main_hint" android:completionThreshold="1"-->
		</LinearLayout>
		<LinearLayout 
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="horizontal"
			>
		    <TextView
				android:text="@string/country"
				android:layout_width="160px"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20px"
			/>
			<EditText 
				android:id="@+id/insert_et_country"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20px"
				android:singleLine="true"
			/>
		</LinearLayout>
		<LinearLayout 
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="horizontal"
			>
		    <TextView
				android:text="@string/rank"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20px"
			/>
			<EditText 
				android:id="@+id/insert_et_rank"
				android:layout_width="100px"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20px"
				android:singleLine="true"
				android:inputType="number"
			/>
		    <TextView
				android:text="@string/seed"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20px"
			/>
			<EditText 
				android:id="@+id/insert_et_seed"
				android:layout_width="100px"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20px"
				android:singleLine="true"
				android:inputType="number"
			/>
		</LinearLayout>
	    <TextView
			android:text="@string/match_infor"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textColor="@color/white"
			android:background="@color/dark_grey"
		/>
    	<AutoCompleteTextView
			android:id="@+id/insert_et_matchname"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="15px"
			android:completionThreshold="1"
    	/>
    	
		<LinearLayout 
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="horizontal"
			>
			<Spinner 
				android:id="@+id/insert_spinner_year"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
			/>
			<Spinner 
				android:id="@+id/insert_spinner_month"
				android:layout_marginLeft="20px"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
			/>
		</LinearLayout>
		<LinearLayout 
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="horizontal"
			>
			<Spinner 
				android:id="@+id/insert_spinner_level"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
			/>
			<Spinner 
				android:id="@+id/insert_spinner_region"
				android:layout_marginLeft="20px"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
			/>
		</LinearLayout>
		<LinearLayout 
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="horizontal"
			>
			<Spinner 
				android:id="@+id/insert_spinner_court"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
			/>
			<Spinner 
				android:id="@+id/insert_spinner_round"
				android:layout_marginLeft="20px"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
			/>
		</LinearLayout>
		<LinearLayout 
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="horizontal"
			>
		    <TextView
				android:text="@string/country"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20px"
			/>
			<EditText 
				android:id="@+id/insert_et_matchcountry"
				android:layout_marginLeft="20px"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:singleLine="true"
			/>
		</LinearLayout>
		<LinearLayout 
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="horizontal"
			>
		    <TextView
				android:text="@string/city"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20px"
			/>
			<EditText 
				android:id="@+id/insert_et_city"
				android:layout_marginLeft="20px"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:singleLine="true"
			/>
		</LinearLayout>
		<LinearLayout 
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="horizontal"
			>
		    <TextView
				android:text="@string/winner"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20px"
			/>
			<EditText 
				android:id="@+id/insert_et_winner"
				android:layout_marginLeft="20px"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:singleLine="true"
			/>
		</LinearLayout>
		<LinearLayout 
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="horizontal"
			>
		    <TextView
				android:text="@string/score"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20px"
			/>
			<EditText 
				android:id="@+id/insert_et_score"
				android:layout_marginLeft="20px"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:singleLine="true"
			/>
		</LinearLayout>
	</LinearLayout>
</ScrollView>
